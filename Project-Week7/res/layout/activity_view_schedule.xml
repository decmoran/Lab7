<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Spinner
        android:id="@+id/moduleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    
    <TextView
        android:id="@+id/scheduleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/moduleSpinner"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@+id/lectureCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/moduleSpinner"
        android:layout_alignParentRight="true"
        android:text="@+string/lecture" />
    
     <CheckBox
        android:id="@+id/labCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lectureCheckBox"
        android:layout_alignParentRight="true"
        android:text="@+string/lab" />
    
</RelativeLayout>